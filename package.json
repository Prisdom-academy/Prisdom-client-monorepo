{
  "name": "prisdom-mono-repo",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "start-app": "yarn workspace @prisdom/app run start",
    "build-app": "yarn workspace @prisdom/app build",
    "test-app": "yarn workspace @prisdom/app test",
    "prepare": "husky install",
    "prettier-write": "prettier --write \"./packages/**/*.ts\"  --ignore-unknown",
    "lint-staged": "lint-staged"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx, jsx}": [
      "eslint --quiet --fix"
    ],
    "*.{json,md,html,js,jsx,ts,tsx}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.3",
    "prettier": "^2.8.7"
  },
  "dependencies": {
    "lint-staged": "^13.2.1"
  }
}
